<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="8dp"
    android:paddingTop="28dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/header_weather_city_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="city:"/>

        <TextView
            android:id="@+id/header_weather_wea_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="æ™´" />

        <TextView
            android:id="@+id/header_weather_temperature_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="@string/temp" />

        <TextView
            android:id="@+id/header_weather_pm2.5_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="@string/pm" />

        <TextView
            android:id="@+id/header_weather_air_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="@string/airQuality" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/header_weather_img"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/header_weather_index_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/index"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>



</LinearLayout>
